{
  "manifest_version": 3,
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "name": "FB Ad Saver",
  "version": "1.0",
  "description": "Inject Save buttons into Facebook Ad Library",
  "options_ui": {
    "page": "./option/options.html",
    "open_in_tab": true
  },
  "host_permissions": [
    "*://*.facebook.com/ads/library/*",
    "*://*.facebook.com/api/graphql/*",
    "*://*.yakkyo.com/meta-ads/*"
  ],
  "background": {
    "service_worker": "./background.js"
  },
  "content_scripts": [
    {
      "matches":  ["*://*.facebook.com/ads/library/*"],
      "js": [
        "./content_builded.js"
      ],
      "run_at": "document_start"
    }
  ]
}
